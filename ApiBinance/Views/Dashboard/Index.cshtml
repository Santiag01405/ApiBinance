@{
    ViewData["Title"] = "Panel de Control Binance";
}

<h1>Panel de Control Binance</h1>

<div>
    <h2>Anuncios</h2>
    <ul>
        <li><a asp-controller="Binance" asp-action="PostAd">Publicar Anuncio</a></li>
        <li><a asp-controller="Binance" asp-action="UpdateAd">Actualizar Anuncio</a></li>
        <li><a asp-controller="Binance" asp-action="UpdateAdStatus">Actualizar Estado de Anuncio</a></li>
        <li><a asp-controller="Binance" asp-action="GetAdDetail">Obtener Detalle del Anuncio</a></li>
    </ul>
</div>

<div>
    <h2>Órdenes</h2>
    <ul>
        <li><a asp-controller="Binance" asp-action="ReleaseCoin">Liberar Orden (Release Coin)</a></li>
    </ul>
</div>

<div>
    <h2>Chat</h2>
    <ul>
        <li><a asp-controller="Binance" asp-action="GetChatMessages">Ver Mensajes de Chat</a></li>
        <li><a asp-controller="Binance" asp-action="GetChatCredentials">Obtener Credenciales de Chat</a></li>
    </ul>
</div>

<div>
    <h2>Utilidades</h2>
    <ul>
        <li><a asp-controller="Binance" asp-action="GetAdDetail">Ver Detalles de un Anuncio</a></li>
    </ul>
</div>
